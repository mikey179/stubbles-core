{
    "name": "stubbles/core",
    "type": "library",
    "homepage": "http://stubbles.net/",
    "license": "BSD-3-Clause",
    "description": "Provides base classes for Stubbles packages.",
    "require": {
        "php": ">=5.4.0"
    },
    "require-dev": {
        "stubbles/core-dev": "4.0.*@dev",
        "mikey179/vfsStream": "~1.2",
        "phpunit/phpunit": "~4.1"
    },
    "autoload": {
        "psr-4": {
            "stubbles\\": "src/main/php"
        },
        "files": ["src/main/php/lang/functions.php",
                  "src/main/php/peer/functions.php"
                 ]
    },
    "extra": {
        "branch-alias": {
            "dev-master": "4.0.x-dev"
        }
    }
}
